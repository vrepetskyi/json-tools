<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="put.ai.se.jsontools.gui.FormatController">
    <children>
        <HBox spacing="70">
            <children>
                <VBox>
                    <children>
                        <Label text="Source" />
                        <TextArea fx:id="source" maxWidth="240" layoutX="20.0" layoutY="28.0" />
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Result" />
                        <TextArea fx:id="result" maxWidth="240" layoutX="280.0" layoutY="28.0" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
        <!-- TODO: format options -->
        <Button text="Format" onAction="#format" />
        <Button text="Back" onAction="#back" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>